#title_bar
  %h1="Notes tagged with '#{@tag.name}'"

#user_notes.section
  -@user_notes.each do |note|
    .user_note.note{:id => "note_#{note.id}"}
      =render :partial => '/notes/results_block', :locals => {:note => note}
    
#public_notes
  -@public_notes.each do |note|
    .public_note.note{:id => "note_#{note.id}"}
      =render :partial => '/notes/results_block', :locals => {:note => note}
